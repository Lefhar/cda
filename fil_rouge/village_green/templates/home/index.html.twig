{% extends 'base.html.twig' %}

{% block title %}Accueil village green!{% endblock %}

{% block body %}

    <section>

        <div class="container bg-center">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Accueil</li>
                </ol>
            </nav>
            <!-- Contente-->

            <div class="row p-4">

                <div class="col-sm-12 col-md-12 col-lg-9 col-xl-9">
                    <img src="/assets/src/pub-guitare.png" alt="pub guitare" class="w-100" height="100%">
                </div>
                <div class="col-sm-12 col-md-12 col-lg-3 col-xl-3 d-none d-lg-block d-xl-block p-0">
                    <img src="/assets/src/banniere-droite-prix.png"  alt="pub banniere"  class="w-100" height="100%">
                </div>

            </div>
            <div class="row mt-2 mb-2">
                <img src="/assets/src/banniere-centre-4-pictos.png"  alt="pub picto" class="w-100">
            </div>

            <div class="row p-4">
                <h2>Nos Cat√©gories</h2>
            </div>
            <div class="row pt-2 pb-2">

                {% set count = 0 %}
                {% for row in home %}
                    {% if row.souscat is null and count <8 %}
                        <div class="col-sm-12 col-md-12 col-lg-3 col-xl-3 p-1 ">
                            <div class="overlay-image border border-dark">
                                <a href="{{ path('categories',{id:row.id}) }}">
                                    <img class="w-100" src="/assets/src/{{ row.picture }}" alt="{{ row.name }}"
                                         height="183" >
                                    <div class="hover">
                                        <div class="cathover">
                                            {{ row.name }}
                                        </div>

                                    </div>
                                </a>
                            </div>
                        </div>
                        {% set count = count + 1 %}
                    {% endif %}
                {% endfor %}


            </div>
            <div class="row p-4">
                <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
                    <h2>Nos meilleurs vents</h2>
                </div>

                <div class="col-sm-12 col-md-12  col-lg-6 col-xl-6 d-none d-xl-block d-lg-block">
                    <h2>Nos partenaires</h2>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-2 col-xl-2">
                    <div class="overlay-image">
                        <a href="#">
                            <img class="w-100" height="311"  src="/assets/src/TOP-VENTES-guitare.png" alt="Top vente guitare"
                                >
                            <div class="hover">
                                <img class="w-100" height="311"  src="/assets/src/TOP-VENTES-ROLL-OVER guitare.png"
                                     alt="Top vente guitare roll over" >
                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-sm-12 col-md-12 col-lg-2 col-xl-2">
                    <div class="overlay-image">
                        <a href="#">
                            <img class="w-100" height="311" src="/assets/src/TOP-VENTES-saxo.png" alt="Top vente saxo" >
                            <div class="hover">
                                <img class="w-100" height="311"  src="/assets/src/TOP-VENTES-ROLL-OVER saxo.png" alt="Top vente saxo"
                                     >
                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-sm-12 col-md-12 col-lg-2 col-xl-2">
                    <div class="overlay-image">
                        <a href="#">
                            <img class="w-100" height="311" src="/assets/src/TOP-VENTES-piano.png" alt="Top vente piano"
                                 >
                            <div class="hover">
                                <img class="w-100" height="311"  src="/assets/src/TOP-VENTES ROLL-OVER-piano.png" alt="Top vente piano"
                                     >
                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-sm-12 col-md-12  col-lg-6 col-xl-6  d-lg-none  d-xl-none d-sm-block">
                    <h2>Nos partenaires</h2>
                </div>
                <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
                    <img class="w-100" height="311"  src="/assets/src/partenaireslogos.png" alt="partenaireslogos" >
                </div>
            </div>
        </div>
    </section>
    <!-- fin content-->
{% endblock %}
