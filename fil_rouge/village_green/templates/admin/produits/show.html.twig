{% extends 'base.admin.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <section>
        <div class="container bg-center">
            <div class="row">

                <div class="col-12">
                    <h1>Products</h1>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ product.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ product.name }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ product.description|raw  }}</td>
                        </tr>
                        <tr>
                            <th>Photo</th>
                            <td>{{ product.photo }}</td>
                        </tr>
                        <tr>
                            <th>Label</th>
                            <td>{{ product.label }}</td>
                        </tr>
                        <tr>
                            <th>Ref</th>
                            <td>{{ product.ref }}</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>{{ product.price }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ product.status }}</td>
                        </tr>
                        <tr>
                            <th>Stock</th>
                            <td>{{ product.stock }}</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="form-group">
                        <a class="btn btn-dark" href="{{ path('admin_index') }}">Retour</a>

                    <a class="btn btn-success"  href="{{ path('admin_edit', {'id': product.id}) }}">Modifier</a>

                    {{ include('admin/produits/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
